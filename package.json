{
  "homepage": "https://github.com/tommasoturchi/hugo-theme-tom",
  "bugs": "https://github.com/tommasoturchi/hugo-theme-tom/issues",
  "scripts": {
    "build:sass": "node-sass --output-style compressed -o static/css sass/",
    "autoprefixer": "postcss static/css/*.css --use autoprefixer -d static/css",
    "build": "npm run build:sass && npm run autoprefixer",
    "watch": "chokidar 'sass/*.sass' -c 'npm run build:sass && npm run autoprefixer'"
  },
  "author": {
    "name": "Tommaso Turchi",
    "url": "https://turchi.im"
  },
  "repository": "github:tommasoturchi/hugo-theme-tom",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "autoprefixer": "^9.1.2",
    "chokidar-cli": "^1.2.0",
    "node-sass": "^4.9.3",
    "postcss": "^7.0.2",
    "postcss-cli": "^6.0.0",
    "lodash": "^4.17.10"
  }
}
